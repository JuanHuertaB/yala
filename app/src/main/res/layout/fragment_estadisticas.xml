<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.EstadisticasFragment"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_izquierda"
                android:layout_marginEnd="@dimen/padding_derecha"
                android:layout_marginBottom="@dimen/marginBottom"
                android:layout_marginTop="@dimen/marginTop"
                android:text="Porcentaje de avance por Álbum"
                android:fontFamily="@font/didact_gothic"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="22dp"/>

            <Spinner
                android:id="@+id/spinner_albums_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piChart"
                android:layout_width="match_parent"
                android:layout_height="250sp">
            </com.github.mikephil.charting.charts.PieChart>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_izquierda"
                android:layout_marginEnd="@dimen/padding_derecha"
                android:layout_marginBottom="@dimen/marginBottom"
                android:layout_marginTop="@dimen/marginTop"
                android:text="Avance de toda la colección"
                android:fontFamily="@font/didact_gothic"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="22dp"/>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piChart_group_albums"
                android:layout_width="match_parent"
                android:layout_height="250sp">
            </com.github.mikephil.charting.charts.PieChart>

        </LinearLayout>
    </ScrollView>

</LinearLayout>